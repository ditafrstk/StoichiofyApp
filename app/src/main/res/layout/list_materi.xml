<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:background="@drawable/ic_bg_materi"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

    <ImageView
        android:id="@+id/circleWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/circle_white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="40dp"
        />

    <ImageView
        android:id="@+id/circleYellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/circle_yellow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/circleWhite"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        />

        <TextView
            android:id="@+id/perbab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="26dp"
            android:fontFamily="@font/raleway_bold"
            android:text="BAB"
            android:textAllCaps="true"
            android:textColor="@color/ColorWhite"
            app:layout_constraintStart_toEndOf="@id/circleYellow"
            app:layout_constraintTop_toTopOf="parent"

            />

        <TextView
            android:id="@+id/judul"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="42dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppins_bold"
            android:text="PENDAHULUAN"
            android:textColor="@color/ColorWhite"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/ic_materi"
            app:layout_constraintHorizontal_bias="0.028"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/perbab" />
        <ImageView
            android:id="@+id/ic_materi"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/history"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="32dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/judul"
        app:layout_constraintVertical_bias="0.586">

        <TextView
            android:id="@+id/desc1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="@drawable/radius_white"
            android:fontFamily="@font/poppins_bold"
            android:padding="5dp"
            android:text="Ilmuwan Muslim Kimia"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/desc2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="@drawable/radius_white"
            android:fontFamily="@font/poppins_bold"
            android:padding="5dp"
            android:text="Stoikiometri Reaksi"
            android:textSize="8sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
